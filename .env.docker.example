# ============================================
# Docker Environment Configuration
# ============================================

# Backend Configuration
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:password@db:5432/turath_almandi?schema=public&connection_limit=10&pool_timeout=20

# Redis
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-required
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters
JWT_ACCESS_TOKEN_EXPIRATION=7d
JWT_REFRESH_TOKEN_EXPIRATION=7
JWT_REFRESH_TOKEN_EXPIRATION_REMEMBER_ME=30

# CORS / Frontend
FRONTEND_URL=http://localhost
CORS_ORIGIN=http://localhost

# Bcrypt
BCRYPT_SALT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Seeding (set to false after first run)
RUN_SEED=true

# ============================================
# Frontend Configuration
# ============================================

# Backend URL (used during Docker build)
VITE_BACKEND_URL=http://localhost:3000
