# ============================================
# Docker Deployment Environment Variables
# ============================================
# Copy this file to .env when using Docker Compose:
#   cp .env.docker.example .env
# Then fill in the required values below.
# ============================================

# ============================================
# Application Configuration
# ============================================
PORT=3000
NODE_ENV=production

# ============================================
# Database Configuration
# ============================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# ============================================
# JWT Configuration (REQUIRED - CHANGE THESE!)
# ============================================
# Generate secure random strings (min 32 characters):
# Option 1: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Option 2: openssl rand -hex 32

JWT_SECRET=change_this_to_a_secure_random_string_min_32_characters
JWT_REFRESH_SECRET=change_this_to_another_secure_random_string_min_32_characters
JWT_ACCESS_TOKEN_EXPIRATION=7d
JWT_REFRESH_TOKEN_EXPIRATION=7
JWT_REFRESH_TOKEN_EXPIRATION_REMEMBER_ME=30

# ============================================
# CORS / Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# Bcrypt Configuration
# ============================================
BCRYPT_SALT_ROUNDS=10

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# ============================================
# Scheduled Tasks Configuration
# ============================================
# CRON expression for checking overdue debts
# Default: "0 9 * * *" (Every day at 9:00 AM UTC)
OVERDUE_DEBT_CHECK_CRON=0 9 * * *

# ============================================
# Database Seeding
# ============================================
# Set to "true" to run database seeding on startup
# WARNING: Only use for initial setup or development!
RUN_SEED=false

# ============================================
# PgAdmin Configuration (Optional)
# ============================================
# Only used when starting with --profile admin
PGADMIN_EMAIL=admin@restaurant.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
