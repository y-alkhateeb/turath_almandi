# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/turath_almandi?schema=public"

# JWT
# Secret key for signing JWT access tokens
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Secret key for signing JWT refresh tokens (if using JWT-based refresh tokens)
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
# Access token expiration (e.g., 15m, 1h, 7d)
JWT_ACCESS_TOKEN_EXPIRATION=7d
# Refresh token expiration in days (normal login)
JWT_REFRESH_TOKEN_EXPIRATION=7
# Refresh token expiration in days (remember me enabled)
JWT_REFRESH_TOKEN_EXPIRATION_REMEMBER_ME=30

# CORS
CORS_ORIGIN=http://localhost:5173

# Bcrypt
BCRYPT_SALT_ROUNDS=10

# Scheduled Tasks
# CRON expression for checking overdue debts
# Default: "0 9 * * *" (Every day at 9:00 AM UTC)
# Format: minute hour day-of-month month day-of-week
# Examples:
#   - "0 9 * * *" = Daily at 9:00 AM
#   - "0 */6 * * *" = Every 6 hours
#   - "0 8-17 * * 1-5" = Every hour from 8 AM to 5 PM, Monday to Friday
OVERDUE_DEBT_CHECK_CRON=0 9 * * *
