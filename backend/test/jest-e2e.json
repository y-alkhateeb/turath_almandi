{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "testMatch": [
    "**/*.e2e-spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "../src/**/*.service.ts",
    "../src/**/*.controller.ts",
    "../src/**/*.gateway.ts",
    "!../src/**/*.spec.ts",
    "!../src/**/*.e2e-spec.ts",
    "!../src/**/dto/**",
    "!../src/**/interfaces/**",
    "!../src/**/constants/**",
    "!../src/**/decorators/**",
    "!../src/**/guards/**",
    "!../src/**/middleware/**",
    "!../src/main.ts",
    "!../src/index.ts"
  ],
  "coverageDirectory": "../coverage-e2e",
  "coverageReporters": [
    "text",
    "text-summary",
    "html",
    "lcov"
  ],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  }
}
